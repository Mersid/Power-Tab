<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[comps/li[@Class = "CompProperties_Power"]]/comps</xpath>
		<value>
			<li Class="Compilatron.CompPropertiesPowerTracker" />
		</value>
	</Operation>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Rimefeller</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[comps/li[@Class = "Rimefeller.CompProperties_PowerPlant"]]/comps</xpath>
			<value>
				<li Class="Compilatron.CompPropertiesPowerTracker" />
			</value>
		</match>
		
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[comps/li[@Class = "CompProperties_Battery"]]/comps</xpath>
		<value>
			<li Class="Compilatron.CompPropertiesPowerTracker" />
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[comps/li[@Class = "Compilatron.CompPropertiesPowerTracker"] and not(inspectorTabs)]</xpath>
		<value>
			<inspectorTabs/>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[comps/li[@Class = "Compilatron.CompPropertiesPowerTracker"]]/inspectorTabs</xpath>
		<value>
			<li>Compilatron.PowerTab</li>
		</value>
	</Operation>
</Patch>